<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1A1A1A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1E60B1"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Colección de todito"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_profile" />
        </LinearLayout>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="CATEGORÍA"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/category_background"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingVertical="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_left"
                android:scaleType="centerInside"
                app:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="4">

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="COMICS"
                    android:background="@drawable/btn_selected"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="VESTIR"
                    android:background="@drawable/btn_unselected"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="VIAJES"
                    android:background="@drawable/btn_unselected"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="PAISAJES"
                    android:background="@drawable/btn_unselected"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="8dp"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/comicf"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="6dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/cate"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Aventuras"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Cómics de aventura son historietas que narran relatos emocionantes con exploraciones, batallas y desafíos. Pueden incluir géneros como acción, fantasía, ciencia ficción y misterio. Ejemplos famosos son Tintín, Tarzán y Conan el Bárbaro."
                            android:textSize="12sp"
                            android:textColor="#444444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart_filled" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="6dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/cate"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Cómico "
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Cómics cómicos son historietas centradas en el humor, con personajes y situaciones exageradas para divertir al lector. Pueden ser tiras cómicas o series más largas. Ejemplos famosos incluyen Garfield, Mafalda y Asterix"
                            android:textSize="12sp"
                            android:textColor="#444444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart_filled" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="6dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/cate"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Fantástico"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Cómics fantásticos presentan mundos mágicos, criaturas sobrenaturales y eventos imposibles, fusionando mitología y aventura. Ejemplos famosos incluyen Sandman, Fábulas y Elfquest."
                            android:textSize="12sp"
                            android:textColor="#444444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart_filled" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="SIGUIENTE"
            android:background="@drawable/btn_selected"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="16dp" />


    </LinearLayout>
</ScrollView>